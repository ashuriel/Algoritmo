import tkinter as tk
from tkinter import messagebox
import math

def clasificar_figura():
    try:
        global a, b, c, figura
        a = float(entry1.get())
        b = float(entry2.get())
        c = float(entry3.get())

        if a == b == c:
            figura = "círculo"
            resultado = "Es un círculo"
        elif a == b or a == c or b == c:
            figura = "triángulo"
            resultado = "Es un triángulo isósceles"
        elif abs(a - b) == c or abs(b - c) == a or abs(a - c) == b:
            figura = "triángulo"
            resultado = "Es un triángulo rectángulo"
        elif a + b > c and a + c > b and b + c > a:
            figura = "triángulo"
            resultado = "Es un triángulo escaleno"
        elif a + b == c or a + c == b or b + c == a:
            figura = "paralelogramo"
            resultado = "Forma un paralelogramo"
        else:
            figura = "ninguna"
            resultado = "No forma una figura reconocida"

        resultado_label.config(text=resultado)
        perimetro_label.config(text="")
        area_label.config(text="")

    except ValueError:
        messagebox.showerror("Error", "Por favor, ingresa solo números válidos.")

def calcular_perimetro():
    if figura == "círculo":
        r = a / 2
        perimetro = 2 * math.pi * r
        perimetro_label.config(text=f"Perímetro: {perimetro:.2f}")
    elif figura == "triángulo":
        perimetro = a + b + c
        perimetro_label.config(text=f"Perímetro: {perimetro:.2f}")
    elif figura == "paralelogramo":
        perimetro = 2 * (a + b)
        perimetro_label.config(text=f"Perímetro: {perimetro:.2f}")
    else:
        perimetro_label.config(text="No se puede calcular")

def calcular_area():
    if figura == "círculo":
        r = a / 2
        area = math.pi * r ** 2
        area_label.config(text=f"Área: {area:.2f}")
    elif figura == "triángulo":
        s = (a + b + c) / 2
        try:
            area = math.sqrt(s * (s - a) * (s - b) * (s - c))
            area_label.config(text=f"Área: {area:.2f}")
        except ValueError:
            area_label.config(text="Área no válida")
    elif figura == "paralelogramo":
        area = a * c
        area_label.config(text=f"Área: {area:.2f}")
    else:
        area_label.config(text="No se puede calcular")

# Interfaz
root = tk.Tk()
root.title("Clasificador de Figuras")
root.geometry("350x400")

tk.Label(root, text="Ingresa tres números:").pack(pady=10)

entry1 = tk.Entry(root)
entry1.pack()

entry2 = tk.Entry(root)
entry2.pack()

entry3 = tk.Entry(root)
entry3.pack()

tk.Button(root, text="Clasificar", command=clasificar_figura).pack(pady=10)
tk.Button(root, text="Calcular Perímetro", command=calcular_perimetro).pack(pady=5)
tk.Button(root, text="Calcular Área", command=calcular_area).pack(pady=5)

resultado_label = tk.Label(root, text="", font=("Arial", 12, "bold"))
resultado_label.pack(pady=10)

perimetro_label = tk.Label(root, text="", font=("Arial", 11))
perimetro_label.pack(pady=5)

area_label = tk.Label(root, text="", font=("Arial", 11))
area_label.pack(pady=5)


a = b = c = 0
figura = "ninguna"

root.mainloop()
